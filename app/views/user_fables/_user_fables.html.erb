<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% user_fables.each do |uf| %>
      <tr>
        <td><%= link_to uf.fable.title, uf %></td>
        <td><%= link_to 'Edit', edit_user_fable_path(uf) %></td>
        <td><%= link_to 'Destroy', uf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>